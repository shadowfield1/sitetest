<style>
  /* Hero Section */
  .hero {
    height: 100vh;
    background-color: var(--color-beige);
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    margin-top: -80px; /* Adjust for header height */
    padding-top: 80px;
  }

  .hero-content {
    max-width: 700px;
    padding: 2rem 0;
  }

  .hero h1 {
    font-family: var(--font-secondary);
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .hero h1 span {
    color: var(--color-green-dark);
  }

  .hero p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    line-height: 1.6;
    max-width: 600px;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
  }

  /* Intro Section */
  .intro {
    padding: 6rem 0;
    background-color: var(--color-white);
  }

  .intro-content {
    display: flex;
    align-items: center;
    gap: 4rem;
  }

  .intro-text {
    flex: 1;
  }

  .intro-text h2 {
    font-family: var(--font-secondary);
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .intro-text h2 span {
    color: var(--color-green-dark);
  }

  .intro-text p {
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .intro-image {
    flex: 1;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .intro-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .intro-image:hover img {
    transform: scale(1.05);
  }

  /* Services Preview Section */
  .services-preview {
    padding: 6rem 0;
    background-color: var(--color-beige);
  }

  .section-title {
    text-align: center;
    font-family: var(--font-secondary);
    font-size: 2.5rem;
    margin-bottom: 3rem;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .service-card {
    background-color: var(--color-white);
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  }

  .service-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .service-card h3 {
    font-family: var(--font-secondary);
    margin-bottom: 1rem;
  }

  .service-card p {
    color: #666;
    line-height: 1.6;
  }

  .services-cta {
    text-align: center;
  }

  /* Testimonials Section */
  .testimonials {
    padding: 6rem 0;
    background-color: var(--color-white);
  }

  .testimonials-slider {
    display: flex;
    gap: 2rem;
    overflow-x: auto;
    padding: 1rem 0;
    scrollbar-width: none; /* Firefox */
  }

  .testimonials-slider::-webkit-scrollbar {
    display: none; /* Chrome, Safari, Edge */
  }

  .testimonial {
    flex: 0 0 calc(50% - 1rem);
    min-width: 300px;
  }

  .testimonial-content {
    background-color: var(--color-beige);
    padding: 2rem;
    border-radius: 10px;
    position: relative;
  }

  .testimonial-content p {
    font-style: italic;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .testimonial-author h4 {
    font-weight: 600;
    margin-bottom: 0.2rem;
  }

  .testimonial-author p {
    font-size: 0.9rem;
    margin: 0;
  }

  /* CTA Section */
  .cta {
    padding: 6rem 0;
    background-color: var(--color-green);
  }

  .cta-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-family: var(--font-secondary);
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
  }

  .cta-content p {
    margin-bottom: 2rem;
    font-size: 1.1rem;
  }

  .cta .btn {
    background-color: var(--color-white);
    color: var(--color-black);
  }

  .cta .btn:hover {
    background-color: var(--color-black);
    color: var(--color-white);
  }

  /* Responsive Styles */
  @media (max-width: 992px) {
    .hero h1 {
      font-size: 3rem;
    }

    .intro-content {
      flex-direction: column;
    }

    .intro-text, .intro-image {
      width: 100%;
    }
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2.5rem;
    }

    .hero p {
      font-size: 1rem;
    }

    .hero-buttons {
      flex-direction: column;
      gap: 1rem;
    }

    .hero-buttons .btn {
      width: 100%;
      text-align: center;
    }

    .section-title {
      font-size: 2rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .testimonial {
      flex: 0 0 100%;
    }

    .cta-content h2 {
      font-size: 2rem;
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  // Register ScrollTrigger plugin
  gsap.registerPlugin(ScrollTrigger);

  // Animation for fade-in elements
  gsap.utils.toArray('.fade-in').forEach((element) => {
    gsap.from(element, {
      opacity: 0,
      y: 30,
      duration: 1,
      scrollTrigger: {
        trigger: element,
        start: "top 80%",
        toggleActions: "play none none none"
      }
    });
  });

  // Animation for slide-in elements
  gsap.utils.toArray('.slide-in').forEach((element) => {
    gsap.from(element, {
      opacity: 0,
      x: -50,
      duration: 1,
      scrollTrigger: {
        trigger: element,
        start: "top 80%",
        toggleActions: "play none none none"
      }
    });
  });

  // Hero section animations
  gsap.from('.hero h1', { opacity: 0, y: 50, duration: 1, delay: 0.2 });
  gsap.from('.hero p', { opacity: 0, y: 30, duration: 1, delay: 0.5 });
  gsap.from('.hero-buttons', { opacity: 0, y: 30, duration: 1, delay: 0.8 });
</script>