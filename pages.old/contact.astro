<style>
  /* Page Header */
  .page-header {
    background-color: var(--color-beige);
    padding: 8rem 0 4rem;
    text-align: center;
  }

  .page-header h1 {
    font-family: var(--font-secondary);
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .page-header p {
    font-size: 1.2rem;
    max-width: 700px;
    margin: 0 auto;
  }

  /* Contact Section */
  .contact-section {
    padding: 6rem 0;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }

  .contact-info h2, .contact-form h2 {
    font-family: var(--font-secondary);
    font-size: 2.2rem;
    margin-bottom: 1.5rem;
  }

  .contact-info p {
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .info-item {
    display: flex;
    margin-bottom: 1.5rem;
  }

  .info-icon {
    font-size: 1.8rem;
    margin-right: 1rem;
  }

  .info-text h3 {
    font-size: 1.2rem;
    margin-bottom: 0.3rem;
  }

  .info-text p {
    margin: 0;
    color: #666;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--color-beige);
    color: var(--color-black);
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background-color: var(--color-green);
    transform: translateY(-3px);
  }

  /* Form Styles */
  .form-group {
    margin-bottom: 1.5rem;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  input, select, textarea {
    width: 100%;
    padding: 0.8rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-family: var(--font-primary);
    font-size: 1rem;
    transition: border-color 0.3s ease;
  }

  input:focus, select:focus, textarea:focus {
    outline: none;
    border-color: var(--color-green);
  }

  button.btn {
    width: 100%;
    cursor: pointer;
  }

  /* Map Section */
  .map-section {
    padding-bottom: 6rem;
  }

  .map-container {
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
  }

  /* FAQ Section */
  .faq {
    padding: 6rem 0;
    background-color: var(--color-beige);
  }

  .section-title {
    text-align: center;
    font-family: var(--font-secondary);
    font-size: 2.5rem;
    margin-bottom: 3rem;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
  }

  .faq-item {
    background-color: var(--color-white);
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
  }

  .faq-item h3 {
    font-family: var(--font-secondary);
    font-size: 1.3rem;
    margin-bottom: 1rem;
    color: var(--color-black);
  }

  .faq-item p {
    line-height: 1.6;
    color: #666;
  }

  /* Responsive Styles */
  @media (max-width: 992px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
